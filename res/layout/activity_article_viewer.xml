<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/view_article_textView_writer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="글쓴이"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#317092"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_article_textView_wrtie_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="write_time"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bbbbbb" />

        <ImageView
            android:id="@+id/view_article_imageView_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/view_article_textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="제목"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/view_article_textView_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="본문 내용"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#bbbbbb" />
    </LinearLayout>

</LinearLayout>